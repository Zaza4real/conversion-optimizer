{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "target": "ES2021"
  },
  "include": ["src/**/*.ts"]
}
